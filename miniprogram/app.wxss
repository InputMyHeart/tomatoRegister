/**app.wxss**/

@import './assets/iconfont.wxss';


cover-image,cover-view,scroll-view,swiper,swiper-item,view,icon,progress,rich-text,
text,button,checkbox,checkbox-group,editor,form,input,label,picker,picker-view,
picker-view-column,radio,radio-group,slider,switch,textarea,navigator,audio,camera,image,
video,map{
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  line-height: 1;
}
.iconfont{
  display: flex;
  justify-content: center;
  align-items: center;
}
.pageBox{
  height: 100vh;
  background-color: #FFFFFF;
}
image{
  width: 100%;
  height: 100%;
}


.ellipsis{overflow: hidden;text-overflow: ellipsis;white-space: nowrap;}
.flex{display: flex;}
.wrap{display: flex;flex-wrap: wrap;}
.flex-between{display: flex;justify-content: space-between;align-items: center;}
.flex-center{display: flex;justify-content: center;align-items: center;}
.flex-flex-center{display: flex;align-items: center;}